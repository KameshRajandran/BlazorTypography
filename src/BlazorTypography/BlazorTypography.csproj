<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <LangVersion>8.0</LangVersion>
    <RazorLangVersion>3.0</RazorLangVersion>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <PackageId>BlazorTypography</PackageId>
    <Version>1.0.0-preview6-01</Version>
    <Authors>Chanan Braunstein</Authors>
    <Title>BlazorTypography</Title>
    <Description>A powerful toolkit for building websites with beautiful design</Description>
    <PackageProjectUrl>https://github.com/chanan/BlazorTypography</PackageProjectUrl>
    <PackageTags>blazor;css;typography</PackageTags>
    <RepositoryUrl>https://github.com/chanan/BlazorTypography</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BlazorStyled" Version="1.0.0-preview6-09" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Browser" Version="3.0.0-preview6.19307.2" />
    <PackageReference Include="Polished" Version="1.0.0-preview-02" />
  </ItemGroup>

</Project>
